<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        
        <variable
            name="isPersonal"
            type="Boolean" />

        <variable
            name="vm"
            type="com.nexters.travelbudget.ui.detail.TripDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end">
                
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:goneIf="@{isPersonal}"
                    android:src="@drawable/ic_launcher_background"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_launcher_background"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_background"/>
                
                
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="@{vm.detailTitle}"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_detail_action"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_title">

            <Button
                android:id="@+id/btn_detail_shared"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:onClick="@{() -> vm.toShared()}"
                android:text="공용" />

            <Button
                android:id="@+id/btn_detail_personal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:onClick="@{() -> vm.toPersonal()}"
                android:text="개인" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_total_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행 총 예산"
            app:layout_constraintTop_toBottomOf="@id/ll_detail_action"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_total_money_title"
            android:id="@+id/tv_detail_total_money"
            app:layout_constraintTop_toBottomOf="@id/ll_detail_action"
            android:layout_marginLeft="4dp"
            android:text="2,000,000원"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/iv_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_total_money"
            android:layout_marginTop="67dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_detail_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="3dp"
            android:text="지출을 기록해주세요!"
            android:textColor="@color/colorFillGrey"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/tv_require_write"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_remain_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_require_write"
            android:text="1,600,000원"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="@color/colorFillGrey"
            />

        <View
            android:id="@+id/v_divide_section"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@drawable/ic_rectangle"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_remain_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            />

        <FrameLayout
            android:id="@+id/fl_detail_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_divide_section"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
            android:id="@+id/custom_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="28dp"
            android:text="지출입력"
            android:textColor="@color/colorWhite"
            app:fabColor="@color/colorFillBlue"
            app:fabSizes="mini"
            app:fabType="roundedSquare"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>