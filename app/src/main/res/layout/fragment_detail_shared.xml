<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"> <!-- 임시값 -->

        <TextView
            android:id="@+id/tv_detail_shared_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_shared_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_shared_total_money"
            android:text="0원"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_shared_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

